<section>
	{{!-- Invoke the component and pass the list of models as a parameter --}}
	<div class="container">
		{{classic-qnaire-statistic model=model}}
		<hr/>
	</div>
</section>
<section>
	{{!-- Invoke the component and pass the list of models as a parameter --}}
	<div class="container">
		<h4>Screenings {{#link-to 'classics.new'}}<button type="button" class="btn btn-default  btn-sm">New</button>{{/link-to}} <button {{action "clear"}} class="btn btn-danger btn-sm btn-danger-open">Clear</button></h4>
		<p>
			<span class="toolkit-inline-help">Click "New" to conduct an ACE screening. Click "Clear" to clear the list of screening results.</span>
		</p>
	</div>
</section>

<section>
	<div class="container">
		<ul class="flex-container">
			{{#each model as |classic|}}
			<li class="flex-item">
				{{#link-to "classics.view" classic}}
				{{classic-qnaire-list-item qnaire=classic}}
				{{/link-to}}
			</li>
			{{/each}}
		</ul>
	</div>
</section>
