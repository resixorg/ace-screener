<style>
.statistic-flex-container {
    display: -webkit-flex;
    display: flex;
    width: 100%;
}

.statistic-flex-item {
    width: 43%;
}
</style>

<div class="statistic-flex-container">
  <div class="statistic-flex-item">
    <ul class="list-unstyled qnaire-list-item">
      <li class="qnaire-list-item item">
        <span class="label label-primary label-primary-open">Total Score</span> <strong>{{aceScoreStatistic.sum}}</strong>
      </li>
      <li class="qnaire-list-item item">
        <span class="label label-primary label-primary-open mock">Top ACEs</span> <strong>{{aceScoreStatistic.topThree}} Q4, Q7, Q5</strong>
      </li>
      <li class="qnaire-list-item item">
        <span class="label label-primary label-primary-open">Average Score</span> <strong>{{aceScoreStatistic.average}}</strong>
      </li>
      <li class="qnaire-list-item item">
        <span class="label label-primary label-primary-open mock">Median</span> <strong>45%</strong>
      </li>
      <li class="qnaire-list-item item">
        <span class="label label-primary label-primary-open mock">Mode</span> <strong>45%</strong>
      </li>
    </ul>
  </div>
  <div class="statistic-flex-item">
    <canvas id="myChart" width="180" height="180"></canvas>
    <script>
      // Get the context of the canvas element we want to select
      var ctx = document.getElementById("myChart").getContext("2d");
      var data = {
        labels: [
          "Q1", "Q2", "Q3", "Q4",
          "Q5", "Q6", "Q7", "Q8",
          "Q9", "Q10", "Q11", "Q12"
        ],
        datasets: [
            {
                label: "My First dataset",
                fillColor: "rgba(0, 138, 237, 0.2)",
                strokeColor: "rgba(69, 157, 219, 1)",
                pointColor: "rgba(220,220,220,1)",
                pointStrokeColor: "#fff",
                pointHighlightFill: "#fff",
                pointHighlightStroke: "rgba(220,220,220,1)",
                data: [
                  2,4,3,7,
                  5,3,6,4,
                  1,3,5,2]
            }
        ]
    };
      var myNewChart = new Chart(ctx).Radar(data);
    </script>
  </div>
</div>
